// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// --- 1. CATALOGOS ---

model Category {
  id       String    @id @default(uuid())
  name     String    @unique
  slug     String    @unique
  products Product[]
}

model Socket {
  id           String    @id @default(uuid())
  name         String    @unique
  cpus         Product[] @relation("CpuSocket")
  motherboards Product[] @relation("MoboSocket")
}

// --- 2. PRODUCTOS ---

model Product {
  id        String   @id @default(uuid())
  name      String
  price     Float
  imageUrl  String?
  stock     Int      @default(0)
  createdAt DateTime @default(now())

  // Relaciones
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  // Specs
  socketId           String?
  socket             Socket? @relation("CpuSocket", fields: [socketId], references: [id])
  compatibleSocketId String?
  compatibleSocket   Socket? @relation("MoboSocket", fields: [compatibleSocketId], references: [id])
  memoryType         String?
  powerWatts         Int?
  formFactor         String?

  buildItems BuildItem[]
}

// --- 3. BUILDS (CARRITOS GUARDADOS) ---

model Build {
  id         String      @id @default(uuid())
  name       String
  totalPrice Float
  userId     String?
  createdAt  DateTime    @default(now())
  buildItems BuildItem[]
}

model BuildItem {
  id        String  @id @default(uuid())
  buildId   String
  build     Build   @relation(fields: [buildId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int     @default(1)
}
