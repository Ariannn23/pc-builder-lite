// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// --- 1. CATALOGOS ---

model Category {
  id       String    @id @default(uuid())
  name     String    @unique
  slug     String    @unique
  products Product[]
}

model Socket {
  id           String    @id @default(uuid())
  name         String    @unique
  cpus         Product[] @relation("CpuSocket")
  motherboards Product[] @relation("MoboSocket")
}

// --- 2. PRODUCTOS ---

model Product {
  id        String   @id @default(uuid())
  name      String
  price     Float
  imageUrl  String?
  stock     Int      @default(0)
  createdAt DateTime @default(now())

  // Relaciones
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  // Specs
  socketId           String?
  socket             Socket? @relation("CpuSocket", fields: [socketId], references: [id])
  compatibleSocketId String?
  compatibleSocket   Socket? @relation("MoboSocket", fields: [compatibleSocketId], references: [id])
  memoryType         String?
  powerWatts         Int?
  formFactor         String?

  // NOTA: Eliminamos 'buildItems' para no complicarnos con relaciones circulares ahora.
}

// --- 3. BUILDS (CARRITOS GUARDADOS) - VERSIÓN SIMPLIFICADA ---

model Build {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  
  // Guardamos el precio total al momento de la compra
  totalPrice Float    
  
  // ¡LA CLAVE! Guardamos todos los componentes elegidos en un solo campo JSON.
  // Esto actúa como una "foto" del recibo, inmune a cambios futuros de precio.
  parts      Json     
}
